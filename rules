#!/usr/bin/make -f
# -*- makefile -*-

# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1

# Uncomment this to change the hardening options
export DEB_BUILD_MAINT_OPTIONS = hardening=+all

DEB_HOST_MULTIARCH ?= $(shell dpkg-architecture -qDEB_HOST_MULTIARCH)

%:
	dh $@ --parallel \
		--with autotools-dev --with autoreconf \
		--buildsystem=autoconf

override_dh_auto_clean:
	# Remove cruft from previous build.
	rm -f config.log
	dh_auto_clean

override_dh_auto_configure:
	dh_auto_configure -- --with-asterisk130 --with-bcg729 \
	  --libdir=/usr/lib  # without /ARCH because ast13 doesn't have that

override_dh_shlibdeps:
	dh_shlibdeps -- -v
